        <Label fx:id="ratingLabel" text="â­â­â­â­â­"
               style="-fx-font-size: 16px; -fx-text-fill: #f39c12;"/>
    </HBox>

    <!-- Title -->
    <Label fx:id="titleLabel" text="Review Title" wrapText="true"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

    <!-- Comment -->
    <Label fx:id="commentLabel" text="Review comment goes here..." wrapText="true"
           style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-line-spacing: 2;"/>

</VBox>
