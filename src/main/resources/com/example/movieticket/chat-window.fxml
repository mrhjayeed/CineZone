<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="174.0" prefWidth="471.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieticket.controller.ChatController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="chat-header">
         <children>
            <Label fx:id="chatTitleLabel" text="Chat Support">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="typingIndicatorLabel" text="" textFill="#FFD700">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <ScrollPane fx:id="chatScrollPane" fitToWidth="true" hbarPolicy="NEVER" styleClass="chat-scroll-pane">
         <content>
            <VBox fx:id="messagesContainer" spacing="5.0" styleClass="messages-container">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <VBox spacing="5.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextArea fx:id="messageInput" prefHeight="56.0" prefRowCount="2" prefWidth="355.0" promptText="Type your message..." wrapText="true" HBox.hgrow="ALWAYS" />
                  <VBox alignment="CENTER" prefHeight="56.0" prefWidth="74.0" spacing="5.0">
                     <children>
                        <Button fx:id="sendButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSendMessage" prefWidth="80.0" styleClass="send-button" text="Send" />
                        <Button fx:id="clearChatButton" mnemonicParsing="false" onAction="#handleClearChat" prefWidth="80.0" styleClass="clear-button" text="Clear" visible="false" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="connectionStatusLabel" text="Connected" textFill="GREEN">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="unreadCountLabel" text="" textFill="RED" visible="false">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </VBox>
   </bottom>
   <styleClass>
      chat-window
   </styleClass>
</BorderPane>
