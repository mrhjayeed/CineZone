<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.movieticket.controller.PaymentDialogController"
      spacing="25" style="-fx-background-color: #fafafa;" prefWidth="550" prefHeight="650">

    <fx:define>
        <ToggleGroup fx:id="paymentMethodGroup"/>
        <ToggleGroup fx:id="mobileBankingProviderGroup"/>
    </fx:define>

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Header -->
    <VBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Complete Payment" style="-fx-text-fill: #1a1a1a; -fx-font-size: 24; -fx-font-weight: bold;"/>
        <Label text="Choose your preferred payment method" style="-fx-text-fill: #666666; -fx-font-size: 13;"/>
    </VBox>

    <!-- Booking Summary -->
    <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="ðŸŽ¬" style="-fx-font-size: 18;"/>
            <VBox spacing="2" HBox.hgrow="ALWAYS">
                <Label fx:id="movieLabel" text="Movie Title" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;"/>
                <HBox spacing="15">
                    <HBox spacing="5">
                        <Label text="Seats:" style="-fx-text-fill: #666666; -fx-font-size: 12;"/>
                        <Label fx:id="seatsLabel" text="A1, A2" style="-fx-text-fill: #333333; -fx-font-size: 12; -fx-font-weight: 600;"/>
                    </HBox>
                </HBox>
            </VBox>
            <VBox alignment="CENTER_RIGHT">
                <Label text="Total" style="-fx-text-fill: #666666; -fx-font-size: 11;"/>
                <Label fx:id="totalAmountLabel" text="50.00" style="-fx-text-fill: #4CAF50; -fx-font-size: 22; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Payment Methods -->
    <VBox spacing="12">

        <!-- Credit Card -->
        <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 18; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6, 0, 0, 1);">
            <RadioButton fx:id="creditCardRadio" text="Credit Card" toggleGroup="$paymentMethodGroup"
                         style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #1a1a1a;"/>
            <VBox fx:id="creditCardDetails" spacing="10" visible="false" managed="false" style="-fx-padding: 0 0 0 28;">
                <TextField fx:id="creditCardNumberField" promptText="1234 5678 9012 3456"
                           style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13; -fx-pref-width: 100%;"/>
                <HBox spacing="10">
                    <TextField fx:id="creditCardExpiryField" promptText="MM/YY" HBox.hgrow="ALWAYS"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13;"/>
                    <TextField fx:id="creditCardCvvField" promptText="CVV" HBox.hgrow="ALWAYS"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13;"/>
                </HBox>
                <TextField fx:id="creditCardHolderField" promptText="Cardholder Name"
                           style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13; -fx-pref-width: 100%;"/>
            </VBox>
        </VBox>

        <!-- Debit Card -->
        <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 18; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6, 0, 0, 1);">
            <RadioButton fx:id="debitCardRadio" text="Debit Card" toggleGroup="$paymentMethodGroup"
                         style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #1a1a1a;"/>
            <VBox fx:id="debitCardDetails" spacing="10" visible="false" managed="false" style="-fx-padding: 0 0 0 28;">
                <TextField fx:id="debitCardNumberField" promptText="1234 5678 9012 3456"
                           style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13; -fx-pref-width: 100%;"/>
                <HBox spacing="10">
                    <TextField fx:id="debitCardExpiryField" promptText="MM/YY" HBox.hgrow="ALWAYS"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13;"/>
                    <TextField fx:id="debitCardCvvField" promptText="CVV" HBox.hgrow="ALWAYS"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13;"/>
                </HBox>
                <HBox spacing="10">
                    <TextField fx:id="debitCardHolderField" promptText="Cardholder Name" HBox.hgrow="ALWAYS"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13;"/>
                    <TextField fx:id="debitCardPinField" promptText="PIN" prefWidth="100"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13;"/>
                </HBox>
            </VBox>
        </VBox>

        <!-- Mobile Banking -->
        <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 18; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6, 0, 0, 1);">
            <RadioButton fx:id="mobileBankingRadio" text="Mobile Banking" toggleGroup="$paymentMethodGroup"
                         style="-fx-font-size: 14; -fx-font-weight: 600; -fx-text-fill: #1a1a1a;"/>
            <VBox fx:id="mobileBankingDetails" spacing="12" visible="false" managed="false" style="-fx-padding: 0 0 0 28;">

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <!-- bKash -->
                    <VBox spacing="0" alignment="CENTER" style="-fx-background-color: #fef5f8; -fx-background-radius: 8; -fx-padding: 12; -fx-cursor: hand; -fx-min-width: 90;">
                        <RadioButton fx:id="bkashRadio" toggleGroup="$mobileBankingProviderGroup">
                            <graphic>
                                <VBox alignment="CENTER" spacing="6">
                                    <Label text="ðŸ“±" style="-fx-font-size: 24;"/>
                                    <Label text="bKash" style="-fx-text-fill: #e2136e; -fx-font-weight: bold; -fx-font-size: 13;"/>
                                </VBox>
                            </graphic>
                        </RadioButton>
                    </VBox>

                    <!-- Nagad -->
                    <VBox spacing="0" alignment="CENTER" style="-fx-background-color: #fff8f0; -fx-background-radius: 8; -fx-padding: 12; -fx-cursor: hand; -fx-min-width: 90;">
                        <RadioButton fx:id="nagadRadio" toggleGroup="$mobileBankingProviderGroup">
                            <graphic>
                                <VBox alignment="CENTER" spacing="6">
                                    <Label text="ðŸ“±" style="-fx-font-size: 24;"/>
                                    <Label text="Nagad" style="-fx-text-fill: #f68b1f; -fx-font-weight: bold; -fx-font-size: 13;"/>
                                </VBox>
                            </graphic>
                        </RadioButton>
                    </VBox>

                    <!-- Rocket -->
                    <VBox spacing="0" alignment="CENTER" style="-fx-background-color: #f8f5f9; -fx-background-radius: 8; -fx-padding: 12; -fx-cursor: hand; -fx-min-width: 90;">
                        <RadioButton fx:id="rocketRadio" toggleGroup="$mobileBankingProviderGroup">
                            <graphic>
                                <VBox alignment="CENTER" spacing="6">
                                    <Label text="ðŸš€" style="-fx-font-size: 24;"/>
                                    <Label text="Rocket" style="-fx-text-fill: #8b3a9c; -fx-font-weight: bold; -fx-font-size: 13;"/>
                                </VBox>
                            </graphic>
                        </RadioButton>
                    </VBox>
                </HBox>

                <TextField fx:id="mobileNumberField" promptText="01XXXXXXXXX"
                           style="-fx-background-color: #f5f5f5; -fx-background-radius: 6; -fx-border-color: transparent; -fx-padding: 10; -fx-font-size: 13; -fx-pref-width: 100%;"/>
            </VBox>
        </VBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="12" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: white; -fx-text-fill: #666666; -fx-font-weight: 600; -fx-pref-width: 140; -fx-pref-height: 42; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8;"/>
        <Button fx:id="payButton" text="Pay Now" onAction="#handlePayment"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: 600; -fx-pref-width: 140; -fx-pref-height: 42; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(76,175,80,0.3), 8, 0, 0, 2);"
                defaultButton="true"/>
    </HBox>
</VBox>
