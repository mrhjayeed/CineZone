<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="300.0" prefWidth="450.0" spacing="20.0" style="-fx-padding: 30; -fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieticket.controller.PasswordResetController">
   <children>
      <!-- Header -->
      <VBox spacing="10.0" style="-fx-alignment: center;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="ðŸ” Reset Password">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label style="-fx-text-fill: #7f8c8d;" text="Enter your username and email to reset your password" />
         </children>
      </VBox>

      <!-- Form Fields -->
      <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <!-- Username Field -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Username" />
                  <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                  <Label fx:id="usernameErrorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
               </children>
            </VBox>

            <!-- Email Field -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Email Address" />
                  <TextField fx:id="emailField" promptText="Enter your email address" style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                  <Label fx:id="emailErrorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
               </children>
            </VBox>

            <!-- New Password Field -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="New Password" />
                  <TextField fx:id="newPasswordField" promptText="Enter your new password" style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                  <Label fx:id="newPasswordErrorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
               </children>
            </VBox>
         </children>
      </VBox>

      <!-- Action Buttons -->
      <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 10 0 0 0;">
         <children>
            <Button fx:id="resetPasswordButton" mnemonicParsing="false" onAction="#handleResetPassword" prefWidth="140.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 5;" text="ðŸ” Reset Password" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 5;" text="âŒ Cancel" />
         </children>
      </HBox>
   </children>
</VBox>
