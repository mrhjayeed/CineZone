<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieticket.controller.ScreeningDialogController">
    <children>
        <Label style="-fx-font-weight: bold;" text="Add New Screening">
            <font>
                <Font size="16.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>
        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
            </columnConstraints>
            <children>
                <Label text="Movie:" GridPane.rowIndex="0" />
                <ComboBox fx:id="movieComboBox" prefWidth="250.0" promptText="Select a movie" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Screen Name:" GridPane.rowIndex="1" />
                <TextField fx:id="screenNameField" promptText="e.g., Screen 1" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Date:" GridPane.rowIndex="2" />
                <DatePicker fx:id="datePicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Time:" GridPane.rowIndex="3" />
                <TextField fx:id="timeField" promptText="HH:MM (e.g., 14:30)" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Ticket Price ($):" GridPane.rowIndex="4" />
                <TextField fx:id="priceField" promptText="e.g., 12.50" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Total Seats:" GridPane.rowIndex="5" />
                <TextField fx:id="totalSeatsField" promptText="e.g., 50" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleOk" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add Screening" />
                <Button mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Cancel" />
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
