<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<VBox prefHeight="500.0" prefWidth="450.0" spacing="20.0" style="-fx-padding: 30; -fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieticket.controller.ProfileEditController">
   <children>
      <!-- Header -->
      <VBox spacing="10.0" style="-fx-alignment: center;">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="âœï¸ Edit Profile">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label style="-fx-text-fill: #7f8c8d;" text="Update your personal information" />
         </children>
      </VBox>

      <!-- Profile Picture Section -->
      <VBox spacing="10.0" style="-fx-alignment: center; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <ImageView fx:id="profileImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
            <HBox spacing="10.0" style="-fx-alignment: center;">
               <children>
                  <Button fx:id="uploadPhotoButton" mnemonicParsing="false" onAction="#handleUploadPhoto" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;" text="ðŸ“· Upload Photo" />
                  <Button fx:id="deletePhotoButton" mnemonicParsing="false" onAction="#handleDeletePhoto" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;" text="ðŸ—‘ï¸ Delete Photo" />
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Form Fields -->
      <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <!-- Full Name Field -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Full Name" />
                  <TextField fx:id="fullNameField" promptText="Enter your full name" style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                  <Label fx:id="fullNameErrorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
               </children>
            </VBox>

            <!-- Username Field -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Username" />
                  <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                  <Label fx:id="usernameErrorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
               </children>
            </VBox>

            <!-- Email Field -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Email Address" />
                  <TextField fx:id="emailField" promptText="Enter your email address" style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                  <Label fx:id="emailErrorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" visible="false" />
               </children>
            </VBox>
         </children>
      </VBox>

      <!-- Action Buttons -->
      <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 10 0 0 0;">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 5;" text="ðŸ’¾ Save" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 5;" text="âŒ Cancel" />
         </children>
      </HBox>
   </children>
</VBox>
